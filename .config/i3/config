# Variables
set $mod            Mod4
set $term           termite
set $term_exec      --exec

set $browser        firefox
set $mail           thunderbird
set $player         smplayer
set $screenlocker   i3lock -c 000000
set $torrent        transmission-qt
set $capture        vokoscreen
set $irc            'irssi --home=~/.config/irssi' --name 'irssi'

# Basic
for_window [class="^.*"] border pixel 1
floating_modifier $mod
gaps inner 15

# Workspaces
set $ws1 "1:  "
set $ws2 "2:  "
set $ws3 "3:  "
set $ws4 "4:  "
set $ws5 "5:  "
set $ws6 "6:  "
set $ws7 "7:  "

# Screens
workspace $ws1 output VGA-1
workspace $ws2 output LVDS-1
workspace $ws3 output LVDS-1
workspace $ws4 output VGA-1
workspace $ws5 output LVDS-1
workspace $ws6 output VGA-1
workspace $ws7 output VGA-1

# Assignation
assign [instance="Navigator"] $ws1
assign [class="Thunderbird"] $ws3
assign [instance="^irssi$"] $ws3
assign [class="Zathura"] $ws4
assign [class="VirtualBox"] $ws5
assign [class="Gimp"] $ws6
assign [class="smplayer"] $ws7
assign [class="transmission"] $ws7

# Startup
exec --no-startup-id i3-msg 'workspace $ws1; exec $browser'
exec --no-startup-id i3-msg 'workspace $ws2; exec $term'
exec --no-startup-id i3-msg 'workspace $ws3; exec $mail; exec $irc'
exec --no-startup-id i3-msg 'workspace $ws2'

# Bars
bar {
	font pango:Hack, FontAwesome 9
	position top
    height 25
	colors { background #1d2021 }
	separator_symbol "  "
	status_command ~/.config/i3/i3-bar/i3-bar.sh top
}
bar {
	font pango:Hack, FontAwesome 9
	position bottom
    height 25
	colors { background #1d2021 }
	separator_symbol "  "
	status_command ~/.config/i3/i3-bar/i3-bar.sh bottom
}

# Bindkeys
# Workspaces
bindsym $mod+1 workspace $ws1
bindsym $mod+2 workspace $ws2
bindsym $mod+3 workspace $ws3
bindsym $mod+4 workspace $ws4
bindsym $mod+5 workspace $ws5
bindsym $mod+6 workspace $ws6
bindsym $mod+7 workspace $ws7
bindsym $mod+z workspace back_and_forth
bindsym $mod+Shift+1 move container to workspace $ws1
bindsym $mod+Shift+2 move container to workspace $ws2
bindsym $mod+Shift+3 move container to workspace $ws3
bindsym $mod+Shift+4 move container to workspace $ws4
bindsym $mod+Shift+5 move container to workspace $ws5
bindsym $mod+Shift+6 move container to workspace $ws6
bindsym $mod+Shift+7 move container to workspace $ws7

# Basic
bindsym $mod+Shift+r restart
bindsym $mod+Shift+e exec i3-msg exit
bindsym $mod+Shift+q kill
bindsym $mod+f fullscreen toggle
bindsym $mod+Shift+space floating toggle
bindsym $mod+space focus mode_toggle

# Focus
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

# Move
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right

# Split
bindsym $mod+h split horizontal
bindsym $mod+v split vertical
bindsym $mod+t split toggle

# Layout
bindsym $mod+s layout stacking
bindsym $mod+w layout tabbed
bindsym $mod+e layout toggle split

# Resize
mode "resize" {
	bindsym Left resize shrink width 10 px or 10 ppt
	bindsym Down resize grow height 10 px or 10 ppt
	bindsym Up resize shrink height 10 px or 10 ppt
	bindsym Right resize grow width 10 px or 10 ppt
	bindsym Escape mode "default"
}
bindsym $mod+r mode "resize"

# Volume
bindsym XF86AudioRaiseVolume exec amixer -q set Master 5%+ unmute
bindsym XF86AudioLowerVolume exec amixer -q set Master 5%- unmute
bindsym XF86AudioMute exec amixer -q set Master toggle

# Brightness
bindsym XF86MonBrightnessUp exec lux -m 500 -a 20%
bindsym XF86MonBrightnessDown exec lux -m 500 -s 20%
bindsym $mod+p exec mons -n left

# Default Applications
bindsym $mod+Return exec --no-startup-id $term
bindsym $mod+Ctrl+b exec --no-startup-id $browser
bindsym $mod+Ctrl+p exec --no-startup-id $player
bindsym $mod+Ctrl+m exec --no-startup-id $mail
bindsym $mod+Ctrl+l exec $screenlocker
bindsym $mod+Ctrl+i exec $term $term_exec $irc
bindsym $mod+Ctrl+t exec $torrent
bindsym $mod+Ctrl+c exec $capture

# Screenshot
bindsym Print exec scrot ~/images/screenshots/%d-%m-%Y-%H:%M:%S.png && \
                        notify-send -u low "Screenshot !" "Screen"
bindsym $mod+Ctrl+x exec scrot -u ~/images/screenshots/%d-%m-%Y-%H:%M:%S.png \
						&& notify-send -u low "Screenshot !" "Window"

# Others Applications
bindsym $mod+Ctrl+j exec jitsi
bindsym $mod+Ctrl+g exec gimp
bindsym $mod+Ctrl+v exec VirtualBox
bindsym $mod+Ctrl+w exec wireshark
