function NoHup {
	if [ -z "$(alias "${1}")" ]; then
		echo "${1}: alias parent not found." ; exit 2
	fi
	unalias "${1}"
	local myalias="${1}"
	shift
	`nohup "${myalias}" "${@}" >& /dev/null &`
	alias "${myalias}=NoHup ${myalias} ${@}"
}

alias gimp="NoHup gimp "
alias smplayer="NoHup smplayer "
alias termite="NoHup termite "
alias zathura="NoHup zathura "
