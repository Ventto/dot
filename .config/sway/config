# vi: set ft=ruby :

# =======================
#       Variables
# =======================

set $mod            Mod4
set $gap            16
set $border         4

# Default Apps
set $launcher       compgen -c | sort -u | fzf --reverse --border | xargs swaymsg exec
set $term           termite
set $browser        firejail firefox -no-remote --profile "${HOME}/.config/firefox/profiles/default"
set $capture        vokoscreen
set $imgeditor      firejail gimp
set $mail           thunderbird --profile "${HOME}/.config/thunderbird/default"
set $player         firejail smplayer
set $screenlocker   swaylock -n -e -f -c 000000 -i "${HOME}/images/wallpapers/matin.png"
set $torrent        transmission-qt

# =======================
#        Monitors
# =======================

output "*" background "${HOME}/images/wallpapers/fusion.jpg" fill

# =======================
#        Inputs
# =======================

input 1:1:AT_Translated_Set_2_keyboard {
     xkb_layout myus
}

# =======================
#       Workspaces
# =======================

set $ws1 "1:  "
set $ws2 "2:  "
set $ws3 "3:  "
set $ws4 "4:  "
set $ws5 "5:  "
set $ws6 "6:  "
set $ws7 "7:  "
set $ws8 "8:  "
set $ws9 "9:  "
set $ws0 "10:  "

assign [class="firefox"] $ws1
assign [app_id="evince"] $ws4
assign [class="Thunderbird"] $ws6
assign [class="Gimp"] $ws7
assign [class="smplayer"] $ws8
assign [class="Riot"] $ws9

# Monitor Dispatching (second monitor only or native one)
workspace $ws1 output DP-2
workspace $ws2 output DP-2
workspace $ws3 output DP-2
workspace $ws4 output DP-2
workspace $ws5 output DP-2
workspace $ws6 output DP-2
workspace $ws7 output DP-2
workspace $ws8 output DP-2
workspace $ws9 output DP-2
workspace $ws0 output DP-2

# =======================
#          Run
# =======================

# Notification server
exec --no-startup-id mako

# Moving to windows fades their opacity
exec --no-startup-id flashfocus

# Brightness
exec --no-startup-id lux -S 40%

# Volume
exec --no-startup-id pactl set-sink-mute @DEFAULT_SINK@ true

# Open a terminal
exec --no-startup-id swaymsg 'workspace $ws2; exec $term'

# Setup idle and inhibitors
exec --no-startup-id "${HOME}/.config/sway/idle/run.sh"

# =======================
#         Windows
# =======================

default_border pixel $border
gaps inner $gap

for_window [app_id="^launcher$"] floating enable, border none

# Customize
# class                 border      background  text        indicator   child_border
client.focused          #268bd2     #268bd2     #111E25     #268bd2     #268bd2
client.focused_inactive #53666D     #111E25     #53666D     #2B383C     #53666D
client.unfocused        #53666D     #111E25     #53666D     #2B383C     #53666D
client.background       #53666D     #111E25     #53666D     #2B383C     #53666D

# Move floarting with mouse
floating_modifier $mod

# =======================
#          Bars
# =======================

exec --no-startup-id waybar -c "${HOME}/.config/waybar/config/top.js"
exec --no-startup-id waybar -c "${HOME}/.config/waybar/config/bottom.js"

# Click on waybar's buttons can make appear floating windows
for_window [app_id="^waybar-onclick$"] floating enable, border none

# =======================
#        Bindkeys
# =======================

# Workspaces
bindsym $mod+1 workspace $ws1
bindsym $mod+2 workspace $ws2
bindsym $mod+3 workspace $ws3
bindsym $mod+4 workspace $ws4
bindsym $mod+5 workspace $ws5
bindsym $mod+6 workspace $ws6
bindsym $mod+7 workspace $ws7
bindsym $mod+8 workspace $ws8
bindsym $mod+9 workspace $ws9
bindsym $mod+0 workspace $ws0
bindsym $mod+z workspace back_and_forth
bindsym $mod+Shift+1 move container to workspace $ws1
bindsym $mod+Shift+2 move container to workspace $ws2
bindsym $mod+Shift+3 move container to workspace $ws3
bindsym $mod+Shift+4 move container to workspace $ws4
bindsym $mod+Shift+5 move container to workspace $ws5
bindsym $mod+Shift+6 move container to workspace $ws6
bindsym $mod+Shift+7 move container to workspace $ws7
bindsym $mod+Shift+8 move container to workspace $ws8
bindsym $mod+Shift+9 move container to workspace $ws9
bindsym $mod+Shift+0 move container to workspace $ws0

# Basic
bindsym $mod+Shift+r reload
bindsym $mod+Shift+e exec i3-msg exit
bindsym $mod+Shift+q kill
bindsym $mod+f fullscreen
bindsym $mod+Shift+space floating toggle
#bindsym $mod+space focus mode_toggle

# Focus
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

# Move
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right

# Split
bindsym $mod+h split horizontal
bindsym $mod+v split vertical
bindsym $mod+t split toggle

# Layout
bindsym $mod+s layout stacking
bindsym $mod+w layout tabbed
bindsym $mod+e layout toggle split

# Resize
mode "resize" {
    bindsym Left resize shrink width 10 px or 10 ppt
    bindsym Down resize grow height 10 px or 10 ppt
    bindsym Up resize shrink height 10 px or 10 ppt
    bindsym Right resize grow width 10 px or 10 ppt
    bindsym Escape mode "default"
}
bindsym $mod+r mode "resize"

# Volume
bindsym XF86AudioRaiseVolume exec volumectl +
bindsym XF86AudioLowerVolume exec volumectl -
bindsym XF86AudioMute exec volumectl toggle

# Brightness
bindsym XF86MonBrightnessUp exec backlightctl +
bindsym XF86MonBrightnessDown exec backlightctl -
bindsym $mod+p exec mons -n left

# Launcher
bindsym $mod+F2     exec termite -c "${HOME}/.config/termite/config_dmenu" \
                                 --name launcher \
                                 -e "zsh -c 'source ${HOME}/.config/zsh/.zshrc; $launcher'"

# Default Applications
bindsym $mod+Return exec --no-startup-id $term
bindsym $mod+Ctrl+b exec --no-startup-id $browser
bindsym $mod+Ctrl+c exec --no-startup-id $capture
bindsym $mod+Ctrl+i exec --no-startup-id $imgeditor
bindsym $mod+Ctrl+l exec --no-startup-id $screenlocker
bindsym $mod+Ctrl+m exec --no-startup-id $mail
bindsym $mod+Ctrl+p exec --no-startup-id $player
bindsym $mod+Ctrl+t exec --no-startup-id $torrent

# Screenshot
set $imgpath "$(xdg-user-dir PICTURES)/screenshots/$(date +'region_%Y-%m-%d-%H%M%S.png')"
bindsym Print exec grim -g "$(slurp)" $imgpath \
                   && notify-send -u normal -a Grim \
                                  "Print Region" "$(basename "$imgpath")"

# Others Applications
bindsym $mod+Ctrl+v exec VirtualBox
bindsym $mod+Ctrl+w exec wireshark
