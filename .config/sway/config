# vi: set ft=ruby :

set $mod Mod4

set $ws1 "1:  "
set $ws2 "2:  "
set $ws3 "3:  "
set $ws4 "4:  "
set $ws5 "5:  "
set $ws6 "6:  "
set $ws7 "7:  "
set $ws8 "8:  "
set $ws9 "9: "
set $ws0 "10: ' "

default_border pixel 4
gaps inner 16

# =======================
#        Outputs
# =======================

##
# Laptop-specific settings:
# Closing the lid disables the builtin screen (first of all for power-saving)
# and only enables the external monitor if plugged in because we like
# focusing on only one screen. For instance, when using the docking station
# with both external monitor and keyboard, we close the lid and put the laptop
# aside.
# Opening the lid enables the builtin screen and disables the external monitor.
# In this case, we assume the laptop is unplugged in from the docking station.
set $laptop_output "eDP-1"
set $extern_output "DP-1"
bindswitch --reload --locked lid:on output $extern_output enable, output $laptop_output disable
bindswitch --reload --locked lid:off output $laptop_output enable, output $extern_output disable
##
# We want to focus on only one screen. When using an external monitor
# but no external keyboard, we are using the builtin one so we cannot rely on
# lid action. That's why we need to choose the output manually.
bindsym $mod+Alt+s output $laptop_output disable,output $extern_output enable
bindsym $mod+Alt+p output $extern_output disable,output $laptop_output enable

exec_always swaymsg output "*" background "${HOME}/images/wallpapers/fusion.jpg" fill

# =======================
#        Inputs
# =======================

# Laptop builtin keyboard
exec_always swaymsg input 1:1:AT_Translated_Set_2_keyboard {
  xkb_layout myus
}

# External 60% custom keyboard
exec_always swaymsg input 17498:4641:DZTECH_DZ60RGB_ANSI {
  xkb_layout myus
}

exec_always swaymsg geat * hide_cursor when-typing enable

# =======================
#         Windows
# =======================

set $active_br #0DEBFF
set $active_fg #000000
set $inactive_br #3C577C
set $inactive_fg #FFFFFF
set $bg #0D1117

# Customize
# class                 border       background   text         indicator    child_border
client.focused          $active_br   $active_br   $active_fg   $active_br   $active_br
client.focused_inactive $inactive_br $inactive_br $inactive_fg $inactive_br $inactive_br
client.unfocused        $inactive_br $inactive_br $inactive_fg $inactive_br $inactive_br
client.background       $bg

for_window [class=".*"] inhibit_idle fullscreen
for_window [app_id=".*"] inhibit_idle fullscreen

for_window [class="^ffplay$"] floating enable
for_window [class="^scrcpy$"] floating enable
for_window [app_id="^launcher$"] floating enable
for_window [app_id="^org.gnome.Calculator$"] floating enable
for_window [app_id="^nm-connection-editor$"] floating enable
for_window [app_id="^blueman-manager$"] floating enable
for_window [app_id="^org.keepassxc.KeePassXC$"] floating enable

##
# Issue: https://bugzilla.mozilla.org/show_bug.cgi?id=1628431
# When using webRTC with Firefox, the browser opens a sharing indicator
# window like a new browser page window. This sharing indicator icons must be
# integrated in the browser UI instead.
for_window [title="Firefox — Sharing Indicator"] kill

# Click on waybar's buttons can make appear floating windows
for_window [app_id="^waybar-onclick$"] floating enable, border none

# Specific app's window assignations
assign [app_id="^[fF]irefox"] $ws1
assign [class="^[gG]itk"] $ws4
assign [app_id="^org.kde.okular"] $ws5
assign [class="^[sS]Signal"] $ws6
assign [class="^[sS]lack"] $ws6
assign [app_id="^[sS]lack"] $ws6
assign [class="^[eE]lement"] $ws6
assign [class="^[tT]eams"] $ws6
assign [class="^[gG]imp"] $ws7
assign [class="^[vV]lc"] $ws6
assign [class="^[sS]tremio"] $ws6

# =======================
#        AutoRun
# =======================

# SSH Agent
exec systemctl --user enable ssh-agent

# To make screen sharing work with browsers (feeding xdg-desktop-portal-wlr)
exec systemctl --user import-environment DISPLAY WAYLAND_DISPLAY SWAYSOCK XDG_CURRENT_DESKTOP
exec dbus-update-activation-environment 2>/dev/null && \
     dbus-update-activation-environment --systemd DISPLAY WAYLAND_DISPLAY SWAYSOCK XDG_CURRENT_DESKTOP

# Status Bars
exec waybar -c "${HOME}/.config/waybar/config/bar-top.js"
exec waybar -c "${HOME}/.config/waybar/config/bar-bottom.js"

# Notification server
exec mako

# Moving to windows fades their opacity
exec flashfocus

# Avoid any laptop's screen with high brightness to burn my eyes
exec lux -S 40%

# Mute volume
exec pactl set-sink-mute @DEFAULT_SINK@ true

# Run X11 apps as root
exec xhost si:localuser:root

# Open a terminal on dedicated workspace
exec swaymsg 'workspace $ws2; exec $term'

# Setup auto-sleep (with locking)
set $lock "${HOME}/.config/sway/lock.sh"
exec swayidle -d -w timeout 600 'systemctl suspend' \
              before-sleep "${lock}; sleep 5;"

# Network Manager Applet
exec nm-applet --indicator

# Blueman-manager cannot run without the applet
exec blueman-applet

# Password Manager
exec keepassxc

# =======================
#     Bindkeys: Media
# =======================

bindsym XF86AudioRaiseVolume exec volumectl +
bindsym XF86AudioLowerVolume exec volumectl -
bindsym XF86AudioMute exec volumectl toggle

bindsym XF86MonBrightnessUp exec backlightctl +
bindsym XF86MonBrightnessDown exec backlightctl -

bindsym XF86Sleep exec systemctl suspend

# =======================
#     Bindkeys: Apps
# =======================

set $launcher       "${HOME}"/.config/rofi/scripts/launcher
set $browser        firefox -no-remote --profile "${HOME}/.config/firefox/profiles/default"
set $term           alacritty
set $powermenu      "${HOME}"/.config/rofi/scripts/powermenu
set $screenshot     grimshot --notify save area

bindsym Print exec $screenshot
bindsym $mod+Ctrl+b exec $browser
bindsym $mod+Ctrl+l exec $lock
bindsym $mod+Return exec $term
bindsym Alt+Return exec $launcher
bindsym $mod+Space+Backspace exec $powermenu

