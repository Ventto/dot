# vi: set ft=ruby :

set $mod Mod4

# =======================
#        Outputs
# =======================

##
# Laptop-specific settings:
# Closing the lid disables the builtin screen (first of all for power-saving)
# and only enables the external monitor if plugged in because we like
# focusing on only one screen. For instance, when using the docking station
# with both external monitor and keyboard, we close the lid and put the laptop
# aside.
# Opening the lid enables the builtin screen and disables the external monitor.
# In this case, we assume the laptop is unplugged in from the docking station.
set $laptop_output "eDP-1"
set $extern_output "DP-1"
bindswitch --reload --locked lid:on output $extern_output enable, output $laptop_output disable
bindswitch --reload --locked lid:off output $laptop_output enable, output $extern_output disable

exec_always swaymsg output "*" \
  background "${XDG_CONFIG_HOME}/sway/wallpapers/current.jpg" fill

# =======================
#        Inputs
# =======================

# Laptop builtin keyboard
exec_always swaymsg input 1:1:AT_Translated_Set_2_keyboard {
  xkb_layout myus
}

# External 60% custom keyboard
exec_always swaymsg input 17498:4641:DZTECH_DZ60RGB_ANSI {
  xkb_layout myus
}

exec_always swaymsg geat * hide_cursor when-typing enable


# =======================
#         Theme
# =======================

include "${XDG_CONFIG_HOME}/sway/conf.d/themes/starcitizen.conf"

# =======================
#         Windows
# =======================

for_window [class=".*"] inhibit_idle fullscreen
for_window [app_id=".*"] inhibit_idle fullscreen

# Display my camera
for_window [class="^ffplay$"] floating enable, resize set 60 ppt 60 ppt
# Display my Android devices
for_window [class="^scrcpy$"] floating enable
for_window [app_id="^launcher$"] floating enable
for_window [app_id="^org.gnome.Calculator$"] floating enable
for_window [app_id="^nm-connection-editor$"] floating enable
for_window [app_id="^blueman-manager$"] floating enable, resize set 20 ppt 60 ppt
for_window [app_id="^org.kde.dolphin$"] floating enable, resize set 60 ppt 80 ppt

##
# Issue: https://bugzilla.mozilla.org/show_bug.cgi?id=1628431
# When using webRTC with Firefox, the browser opens a sharing indicator
# window like a new browser page window. This sharing indicator icons must be
# integrated in the browser UI instead.
for_window [title="Firefox — Sharing Indicator"] kill

# Click on waybar's buttons can make appear floating windows
for_window [app_id="^waybar-onclick$"] floating enable, border none

# =======================
#       Workspaces
# =======================

set $ws1 "1:  "
set $ws2 "2:  "
set $ws3 "3:  "
set $ws4 "4:  "
set $ws5 "5:  "
set $ws6 "6:  "
set $ws7 "7:  "
set $ws8 "8:  "
set $ws9 "9:  "
set $ws0 "10:  "

assign [app_id="^[fF]irefox"] $ws1
assign [class="^[gG]itk"] $ws4
assign [app_id="^org.kde.okular"] $ws5
assign [class="^[sS]Signal"] $ws6
assign [class="^[sS]lack"] $ws6
assign [app_id="^[sS]lack"] $ws6
assign [class="^[eE]lement"] $ws6
assign [class="^[tT]eams"] $ws6
assign [class="^[gG]imp"] $ws7
assign [class="^[vV]lc"] $ws6
assign [class="^[sS]tremio"] $ws6

# =======================
#        Bindkeys
# =======================

# Output

# We want to focus on only one screen. When using an external monitor
# but no external keyboard, we are using the builtin one so we cannot rely on
# lid action. That's why we need to choose the output manually.
bindsym $mod+Alt+1 output $extern_output disable,output $laptop_output enable
bindsym $mod+Alt+2 output $laptop_output disable,output $extern_output enable

# Media

bindsym XF86AudioRaiseVolume exec volumectl +
bindsym XF86AudioLowerVolume exec volumectl -
bindsym XF86AudioMute exec volumectl toggle
bindsym XF86MonBrightnessUp exec backlightctl +
bindsym XF86MonBrightnessDown exec backlightctl -
bindsym XF86Sleep exec systemctl suspend

# Applications

set $launcher       "${XDG_CONFIG_HOME}/rofi/scripts/launcher"
set $term           alacritty
set $powermenu      "${XDG_CONFIG_HOME}/rofi/scripts/powermenu"
set $screenshot     grimshot --notify save area

bindsym Print exec $screenshot
bindsym $mod+Ctrl+l exec $lock
bindsym $mod+Return exec $term
bindsym Alt+Return exec $launcher
bindsym Alt+Ctrl+Backspace exec $powermenu

# Workspaces

bindsym $mod+1 workspace $ws1
bindsym $mod+2 workspace $ws2
bindsym $mod+3 workspace $ws3
bindsym $mod+4 workspace $ws4
bindsym $mod+5 workspace $ws5
bindsym $mod+6 workspace $ws6
bindsym $mod+7 workspace $ws7
bindsym $mod+8 workspace $ws8
bindsym $mod+9 workspace $ws9
bindsym $mod+0 workspace $ws0
bindsym $mod+z workspace back_and_forth
bindsym $mod+Shift+1 move container to workspace $ws1
bindsym $mod+Shift+2 move container to workspace $ws2
bindsym $mod+Shift+3 move container to workspace $ws3
bindsym $mod+Shift+4 move container to workspace $ws4
bindsym $mod+Shift+5 move container to workspace $ws5
bindsym $mod+Shift+6 move container to workspace $ws6
bindsym $mod+Shift+7 move container to workspace $ws7
bindsym $mod+Shift+8 move container to workspace $ws8
bindsym $mod+Shift+9 move container to workspace $ws9
bindsym $mod+Shift+0 move container to workspace $ws0

# Windows

# Move floating with mouse
floating_modifier $mod

# Basic
bindsym $mod+Shift+r reload
bindsym $mod+Shift+e exec i3-msg exit
bindsym $mod+Shift+q kill
bindsym $mod+f fullscreen
bindsym $mod+Shift+space floating toggle

# Focus
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

# Move
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right

# Split
bindsym $mod+h split horizontal
bindsym $mod+v split vertical
bindsym $mod+t split toggle

# Layout
bindsym $mod+s layout stacking
bindsym $mod+w layout tabbed
bindsym $mod+e layout toggle split

# Resize
mode "resize" {
    bindsym Left resize shrink width 10 px or 10 ppt
    bindsym Down resize grow height 10 px or 10 ppt
    bindsym Up resize shrink height 10 px or 10 ppt
    bindsym Right resize grow width 10 px or 10 ppt
    bindsym Escape mode "default"
}
bindsym $mod+r mode "resize"

# =======================
#     Run In Config
# =======================

# Avoid any laptop's screen with high brightness to burn my eyes
exec lux -S 40%

# Mute volume
exec pactl set-sink-mute @DEFAULT_SINK@ true

# Run X11 apps as root
exec xhost si:localuser:root

# Open a terminal on dedicated workspace
exec swaymsg 'workspace $ws2; exec $term'

# Setup auto-sleep (with locking)
set $lock "${XDG_CONFIG_HOME}/sway/lock.sh"
exec swayidle -d -w timeout 600 'systemctl suspend' before-sleep "$lock"

# Network manager applet
exec nm-applet --indicator

# Wayland status bars and Bluetooth manager applet
exec_always "${XDG_CONFIG_HOME}/sway/run-waybar.sh"

# Lightweight Wayland notification daemon
exec mako

# =======================
#    Run After Config
# =======================

# Synchronization point to launch services part of "graphical-session" after
exec "systemctl --user import-environment {,WAYLAND_}DISPLAY SWAYSOCK; \
      systemctl --user start sway-session.target"
