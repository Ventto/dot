#!/usr/bin/env zsh

function LastExt
{
	[ -d "$1" ] && echo "$1/$(ls -1t $1 | grep -i ".($2)$" | head -n1)"
}

function PrettyXML
{
	local output="${1%%.*}-pretty.${1#*.}"
	xmllint --pretty 1 ${1} > ${output}
	mv ${output} ${1}
}

function MergePDF
{
	[ "$#" -lt "2" ] && { echo "Missing arguments."; return 1 }
    for last; do true; done
	array=( "$@" )
	unset "array[$#]"
	echo "pdftk ${array[@]} cat output ${last}"
}
